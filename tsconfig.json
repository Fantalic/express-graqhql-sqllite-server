{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "ESNext",          /* Change this line */
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs":true,
    "lib": ["dom", "es2016", "esnext.asynciterable"],
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  }
}
